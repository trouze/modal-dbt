{
    "secrets": {
        "MODAL-TOKEN": {
            "description": "Modal API token needed to authenticate into the service.",
            "documentationUrl": "https://modal.com/settings/tokens"
        }
    },
    "name": "Codespaces modal-dbt CLI Starter",
    "extensions": [
        "innoverio.vscode-dbt-power-user"
    ],
    "dockerFile": "Dockerfile",
    "settings": {
        "workbench.editorAssociations": {   
            "*.md": "vscode.markdown.preview.editor",
        },
        "[jinja-sql]": {
            "editor.defaultFormatter": "innoverio.vscode-dbt-power-user",
            "editor.formatOnSave": true
        },
        "files.associations": {
            "*.sql": "jinja-sql"
        },
        "python.interpreter.infoVisibility": "always",
        "python.defaultInterpreterPath": "/usr/local/bin/python"
    },
    "features": {
        "docker-in-docker": {
            "version": "latest",
            "moby": true,
            "dockerDashComposeVersion": "v1"
        }
    },
    "hostRequirements": {
        "cpus": 2,
        "memory": "4gb",
        "storage": "32gb"
    },
    "onCreateCommand": "python -m pip install -r requirements.txt",
}